<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            >
            <!-- Add here which you want -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_uername"
                    android:hint="نام کاربری"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:textColorHint="#365ff4"
                    android:textColor="#365ff4"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22dp"

                    android:drawableLeft="@drawable/username"
                    android:gravity="center" />
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_name"
                    android:layout_weight="1"

                    android:hint="نام"
                    android:textColor="#f44336"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_family"
                    android:layout_weight="1"
                    android:hint="نام خانوادگی"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_fathername"
                    android:layout_weight="1"
                    android:hint="نام پدر"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_code"
                    android:layout_weight="1"
                    android:hint="کدملی"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ایمیل"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"
                    android:id="@+id/et_reg_email" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_ostan"
                    android:layout_weight="1"
                    android:hint="استان"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_city"
                    android:layout_weight="1"
                    android:hint="شهر"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_address"
                    android:layout_weight="1"
                    android:hint="آدرس"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reg_mobile"
                    android:layout_weight="1"
                    android:hint="موبایل"
                    android:drawableLeft="@drawable/username"
                    android:textColorHint="#365ff4"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تصویر پروفایل خود را انتخاب کنید"
                    android:id="@+id/textView" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">

                            <Button
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:text="@string/insert_ads_form_btn_camera"
                                android:id="@+id/btnCamera"
                                android:onClick="onBtnCameraClick"
                                android:background="@android:color/holo_green_light"
                                android:textSize="20dp"
                                android:textColor="#ffffff"/>

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView9"
                                android:textSize="25sp" />

                            <Button
                                android:layout_width="145dp"
                                android:layout_height="wrap_content"
                                android:text="@string/insert_ads_form_btn_gallery"
                                android:id="@+id/btnGallery"
                                android:textSize="20sp"
                                android:onClick="onBtnGalleryClick"
                                android:background="@color/material_deep_teal_500"
                                android:textColor="#ffffff"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/insert_ads_form_sel_cat_text"
                                android:id="@+id/insert_ads_selected_img_txt"
                                android:singleLine="true"
                                android:textSize="25dp"
                                android:layout_centerVertical="true"
                                android:textColor="#365ff4" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/no_picture"
                            android:id="@+id/img_user" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="103dp">

                    TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_gravity="center_vertical"
                        android:text="@string/insert_ads_form_image"
                        android:textSize="25sp"
                        android:textColor="#365ff4" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ثبت کردن "
                    android:id="@+id/btn_save_reg"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@android:color/holo_green_light" />

            </LinearLayout>
        </TableLayout>

    </ScrollView>

</LinearLayout>