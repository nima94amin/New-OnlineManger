<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="256dp"
    android:id="@+id/navigation_header">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:background="#50f0f8"
        android:layout_weight="1">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@android:drawable/ic_search_category_default"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_guid_header"

            android:text="پرسشنامه های آنلاین"
            android:textStyle="bold"
            android:theme="@style/Base.Animation.AppCompat.Dialog"
            android:typeface="serif"
            android:layout_weight="1"
            android:textColor="@color/default_bmb_normal_color"
            android:textSize="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:background="#50f0f8"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView2"
            android:src="@drawable/user"
            android:layout_gravity="right"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="نام کاربری"
                android:id="@+id/txt_header_username"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="شماره موبایل"
                android:id="@+id/txt_header_mobile"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>