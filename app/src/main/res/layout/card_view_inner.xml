<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view1"
    android:layout_marginTop="10dip"
    app:cardElevation="5dip"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سوالات سوالات سوالات سوالات سوالات سوالات سوالاتسوالاتسوالاتسوالاتسوالات سوالات سوالات"
                android:id="@+id/txt_qustion"
                android:textColor="#000000"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:background="#ffffff"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_marginRight="1dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/radioGrop">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/abc_btn_check_material"

                        android:gravity="right|center_vertical"
                        android:text="ذنيسبمنشخصث"
                        android:textColor="#000000"
                        android:background="#FFCA28"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/abc_btn_check_material"
                        android:gravity="right|center_vertical"
                        android:text="ذنيسبمنشخصث"
                        android:textColor="#000000"
                        android:enabled="true"
                        android:contextClickable="true"
                        android:background="#ffffff"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableRight="@drawable/abc_btn_check_material"
                        android:gravity="right|center_vertical"
                        android:text="ذنيسبمنشخصث"
                        android:textColor="#000000"
                        android:contextClickable="false"
                        android:background="#FFCA28"
                        android:textSize="20dp" />
                    <RadioButton
                        android:id="@+id/rb4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:button="@null"
                        android:drawableRight="@drawable/abc_btn_check_material"
                        android:gravity="right|center_vertical"
                        android:text="ذنيسبمنشخصث"
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:textSize="20dp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="#FFA000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="12"
                android:id="@+id/tv_number"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>



