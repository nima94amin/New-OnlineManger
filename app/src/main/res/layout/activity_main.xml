<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            >
            <!-- Add here which you want -->


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3245fa">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="وارد شوید به سوالات جواب دهید مهارت های خودتونو بسنجید وارد بازار کسب و کار شوید"
                    />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/login"
                    android:layout_marginBottom="10dp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_usename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android.support.design:hintTextAppearance="@style/GreenTextInputLayout"
                    android:textColor="@android:color/white"
                    android:textColorHint="#ffffff"

                    >

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtusername"
                        android:inputType="text"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="47dp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_horizontal"
                        android:theme="@style/MyEditText"
                        android:hint="نام کاربری"
                        android:textColorHint="#ffffff"
                        android:textSize="22dp"
                        android:drawableLeft="@drawable/username"
                        android:focusableInTouchMode="true"
                        android:gravity="center" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android.support.design:hintTextAppearance="@style/GreenTextInputLayout"

                    android:id="@+id/input_layout_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="#f9f9f9">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtmoble"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/txtusername"
                        android:layout_alignStart="@+id/txtusername"
                        android:textColor="#ffffff"
                        android:layout_gravity="center_horizontal"
                        android:textColorHint="#F6F6F6"
                        android:hint="شماره موبایل"
                        android:focusableInTouchMode="true"
                        android:theme="@style/MyEditText"
                        android:drawableLeft="@drawable/mobile"
                        android:gravity="center"
                        android:inputType="number|numberSigned|numberDecimal"
                        android:maxLength="11" />
                    android:theme="@style/MyEditText"
                        android:gravity="center"
                        android:textSize="22dp" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView4"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="مثال :09100000000"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:text="ورود"
                    android:id="@+id/btn_enter"
                    android:layout_above="@+id/btn_internet"
                    android:layout_alignLeft="@+id/btn_internet"
                    android:layout_alignStart="@+id/btn_internet"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#1529e0"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/enterlogin"
                    android:textSize="20dp" />


            </LinearLayout>
        </TableLayout>

    </ScrollView>

</LinearLayout>
